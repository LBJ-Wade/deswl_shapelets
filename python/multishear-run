#!/usr/bin/env python
"""
    multishear-run [options] tilename band
"""

import sys
from sys import stdout,stderr
import deswl

from optparse import OptionParser
parser = OptionParser(__doc__)

parser.add_option("--debug", default=0,
    help="Debug verbosity level. 0:none 1:dbg 2:xdbg. Default '%default'")
parser.add_option("--srclist", default=None,
 help="srclist file name.  Overrides the default srclist. Default '%default'")
parser.add_option("--outdir", default='.',
                  help="Where to place the output file. Default '%default'")
parser.add_option("--dataset", default='dc4coadd',
                  help="dataset. Default '%default'")
parser.add_option("--host", default='tutti',
                  help="data host.  Default '%default'")

options, args = parser.parse_args(sys.argv[1:])

if len(args) < 2:
    parser.print_help()
    stdout.write('\nExample:\n    multishear-run DES2215-2853 i\n\n')
    stdout.write('Library Documentation:'+\
                 deswl.wlpipe.run_multishear.__doc__)
    sys.exit(45)

tilename=args[0]
band=args[1]
outdir = options.outdir
dataset=options.dataset
host=options.host
srclist=options.srclist
debug=options.debug

deswl.wlpipe.run_multishear(tilename, band, 
                            srclist=srclist,
                            outdir=outdir, dataset=dataset, host=host,
                            debug=debug)

