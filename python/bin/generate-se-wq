#!/usr/bin/env python
"""
    %prog serun

Generate all the wq job files for the given serun.
"""

import sys
import deswl
from deswl.files import MultishearFiles,MultishearCondorJob
import desdb

from optparse import OptionParser
parser = OptionParser(__doc__)

def main():

    options, args = parser.parse_args(sys.argv[1:])
    if len(args) < 1:
        parser.print_help()
        sys.exit(45)

    serun=args[0]

    rc=deswl.files.Runconfig(serun)
    rc.verify()

    s = deswl.files.SEWQJobs(serun)
    s.write()

main()

