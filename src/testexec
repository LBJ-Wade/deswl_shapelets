echo FindStars
time ./findstars ../example_config/wl.config root=decam--27--9-i-3_20 debug_file=findstars.debug verbose=1 output_dots=1 input_prefix=data/ output_prefix=output/ >> findstars.log
echo Logfile output:
tail -1 findstars.log
echo MeasurePSF:
time ./measurepsf ../example_config/wl.config root=decam--27--9-i-3_20 debug_file=psf.debug verbose=2 output_dots=1 input_prefix=data/ output_prefix=output/ >> measurepsf.log
echo Logfile output:
tail -1 measurepsf.log
echo MeasureShear:
time ./measureshear ../example_config/wl.config root=decam--27--9-i-3_20 debug_file=shear.debug output_dots=1 input_prefix=data/ output_prefix=output/ >> measureshear.log
echo Logfile output:
tail -1 measureshear.log
echo Try execution with bad configfile:
./measurepsf foo root=decam--27--9-i-3_20 debug_file=psf_badconfig.debug verbose=2 input_prefix=data/ output_prefix=output/
./measureshear foo root=decam--27--9-i-3_20 debug_file=shear_badconfig.debug input_prefix=data/ output_prefix=output/
echo Try execution with bad imagename:
./measurepsf ../example_config/wl.config root=foo debug_file=psf_badimage.debug verbose=2 input_prefix=data/ output_prefix=output/ >> measurepsf.log
echo Logfile output:
tail -1 measurepsf.log
./measureshear ../example_config/wl.config root=foo debug_file=shear_badimage.debug input_prefix=data/ output_prefix=output/ >> measureshear.log
echo Logfile output:
tail -1 measureshear.log
