echo MeasurePSF:
echo ./measurepsf ../example_config/wl.config root=$root input_prefix=data/ output_prefix=output/ debug_file=mp.debug verbose=1 output_dots=1 
time ./measurepsf ../example_config/wl.config root=$root input_prefix=data/ output_prefix=output/ debug_file=mp.debug verbose=1 output_dots=1 
echo MeasureShear:
echo ./measureshear ../example_config/wl.config root=$root input_prefix=data/ output_prefix=output/ debug_file=ms.debug verbose=1 output_dots=1 
time ./measureshear ../example_config/wl.config root=$root input_prefix=data/ output_prefix=output/ debug_file=ms.debug verbose=1 output_dots=1 
echo FullPipeline
echo ./fullpipe ../example_config/wl.config root=$root input_prefix=data/ output_prefix=output/ debug_file=ms.debug verbose=1 output_dots=1 
time ./fullpipe ../example_config/wl.config root=$root input_prefix=data/ output_prefix=output/ debug_file=ms.debug verbose=1 output_dots=1 
