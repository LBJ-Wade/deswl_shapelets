echo MeasurePSF:
measurepsf ../example_config/wl.config root=data/decam--27--9-i-3_20 debug_file=psf.debug verbose=2 output_dots=1
echo Logfile output:
tail -1 measurepsf.log
echo MeasureShear:
measureshear ../example_config/wl.config root=data/decam--27--9-i-3_20 debug_file=shear.debug output_dots=1
echo Logfile output:
tail -1 measureshear.log
echo Input file sizes:
wc data/decam--27--9-i-3_20-star.csv data/decam--27--9-i-3_20-all.csv 
echo Output files sizes
wc data/decam--27--9-i-3_20-psf.dat data/decam--27--9-i-3_20-shear.dat
echo Try execution with bad configfile:
measurepsf foo root=data/decam--27--9-i-3_20 debug_file=psf_badconfig.debug verbose=2
measureshear foo root=data/decam--27--9-i-3_20 debug_file=shear_badconfig.debug
echo Try execution with bad imagename:
measurepsf ../example_config/wl.config root=foo debug_file=psf_badimage.debug verbose=2
echo Logfile output:
tail -1 measurepsf.log
measureshear ../example_config/wl.config root=foo debug_file=shear_badimage.debug
echo Logfile output:
tail -1 measureshear.log
