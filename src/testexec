echo FindStars
time ./findstars ../example_config/wl.config root=decam--25--38-i-12_01 debug_file=fs.debug verbose=1 output_dots=1 input_prefix=data/ output_prefix=output/
echo MeasurePSF:
time ./measurepsf ../example_config/wl.config root=decam--25--38-i-12_01 debug_file=mp.debug verbose=1 output_dots=1 input_prefix=data/ output_prefix=output/
echo MeasureShear:
time ./measureshear ../example_config/wl.config root=decam--25--38-i-12_01 debug_file=ms.debug verbose=1 output_dots=1 input_prefix=data/ output_prefix=output/
