echo FindStars
time ./findstars ../example_config/wl.config root=decam--27--9-i-3_20 input_prefix=data/ output_prefix=output/
echo MeasurePSF:
time ./measurepsf ../example_config/wl.config root=decam--27--9-i-3_20 input_prefix=data/ output_prefix=output/
echo MeasureShear:
time ./measureshear ../example_config/wl.config root=decam--27--9-i-3_20 input_prefix=data/ output_prefix=output/
echo Try execution with bad configfile:
./measurepsf foo root=decam--27--9-i-3_20 input_prefix=data/ output_prefix=output/
./measureshear foo root=decam--27--9-i-3_20 input_prefix=data/ output_prefix=output/
echo Try execution with bad imagename:
./measurepsf ../example_config/wl.config stars_file=decam--27--9-i-3_20_stars.fits
./measureshear ../example_config/wl.config shear_file=decam--27--9-i-3_20_shear.fits
