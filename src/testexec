echo FindStars
echo ./findstars ../example_config/wl.config image_file=data/$root.fits.fz output_prefix=output/ debug_file=fs.debug verbose=1 output_dots=1 
time ./findstars ../example_config/wl.config image_file=data/$root.fits.fz output_prefix=output/ debug_file=fs.debug verbose=1 output_dots=1 
